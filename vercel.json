{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/service-worker.js",
      "headers": {
        "Content-Type": "application/javascript",
        "Service-Worker-Allowed": "/"
      }
    },
    { 
      "src": "/api/messages/unread-count",
      "dest": "/api/messages/unread-count.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://www.mingshuo.website",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { 
      "src": "/api/send-message",
      "dest": "/api/send-message.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://www.mingshuo.website",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    { "src": "/static/css/(.*)", "dest": "static/css/$1" },
    { "src": "/static/js/(.*)", "dest": "static/js/$1" },
    { "src": "/static/media/(.*)", "dest": "static/media/$1" },
    { "src": "/manifest.json", "dest": "manifest.json" },
    { "src": "/tubiao.png", "dest": "tubiao.png" },
    { "src": "/(albums|search|favorites|messages|playlist)/.*", "dest": "index.html" },
    { "src": "/(login|home)", "dest": "index.html" },
    { "src": "/(.*)", "dest": "index.html" }
  ],
  "env": {
    "PUSHER_APP_ID": "1920738",
    "PUSHER_KEY": "4b522f1169d2c59a5253",
    "PUSHER_SECRET": "8b7948135891378f5fb0",
    "PUSHER_CLUSTER": "ap1",
    "NODE_ENV": "production"
  }
} 