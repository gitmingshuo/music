{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "PUSHER_APP_ID": "your-app-id",
    "PUSHER_KEY": "your-key",
    "PUSHER_SECRET": "your-secret",
    "PUSHER_CLUSTER": "your-cluster"
  }
} 